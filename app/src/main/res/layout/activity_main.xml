<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="131dp"
        android:layout_marginTop="467dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="216dp"
        android:background="@color/purple_200"
        android:text="Calcular"
        android:textColor="@color/teal_700" />

    <EditText
        android:id="@+id/txtPrecoAlcool"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="217dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="469dp"
        android:ems="10"
        android:inputType="text"
        android:text="Preço Alcool" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="135dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="562dp"
        android:text="Preço do Alcool" />

    <EditText
        android:id="@+id/txtPrecoGasolina"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="322dp"
        android:ems="10"
        android:inputType="text"
        android:text="Preço Gasolina" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="405dp"
        android:text="Preço Gasolina" />

</RelativeLayout>
